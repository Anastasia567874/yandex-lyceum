import sys
from PyQt5.QtWidgets import QApplication, QMessageBox
from PyQt5.QtWidgets import QMainWindow, QTableWidgetItem
import sqlite3


class MyWidget(QMainWindow, Ui_MainWindow):
    def __init__(self):
        super().__init__()
        self.setupUi(self)
        self.update_result_films()
        self.update_result_genres()
        self.pushButton.clicked.connect(self.add_film)
        self.pushButton_2.clicked.connect(self.change_film)
        self.pushButton_3.clicked.connect(self.del_film)
        self.pushButton_4.clicked.connect(self.add_genre)
        self.pushButton_5.clicked.connect(self.change_genre)
        self.pushButton_6.clicked.connect(self.del_genre)

    def del_genre(self):
        id = self.tableWidget_2.item(self.tableWidget_2.currentRow(), 0).text()
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        valid = QMessageBox.question(
            self, '', 'Вы точно хотите удалить элемени с id ' + id,
            QMessageBox.Yes, QMessageBox.No
        )
        if valid == QMessageBox.Yes:
            cur.execute(f"""DELETE from genres where id = {id}""")
            con.commit()
        con.close()
        self.update_result_genres()

    def add_genre(self):
        ex2 = Window_genre(parent=self)
        ex2.exec_()
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        result = ex2.result
        try:
            cur.execute(f"""INSERT INTO genres(title) VALUES ('{result}')""")
            con.commit()
        except Exception:
            pass
        con.close()
        self.update_result_genres()

    def change_genre(self):
        id = self.tableWidget_2.item(self.tableWidget_2.currentRow(), 0).text()
        ex2 = Window_genre(parent=self, id=id)
        ex2.exec_()
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        result = ex2.result
        cur.execute(f"""update genres set title = '{result}' where id = {id}""")
        con.commit()
        con.close()
        self.update_result_genres()

    def add_film(self):
        ex2 = Window_film(parent=self)
        ex2.exec_()
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        result = ex2.result
        try:
            cur.execute(f"""INSERT INTO films(title,year,genre,duration)
VALUES('{result[0]}',{result[1]}, (select id from genres where title='{result[2]}'), {result[3]})""")
            con.commit()
        except Exception:
            pass
        con.close()
        self.update_result_films()

    def change_film(self):
        id = self.tableWidget.item(self.tableWidget.currentRow(), 0).text()
        ex2 = Window_film(parent=self, id=id)
        ex2.exec_()
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        result = ex2.result
        cur.execute(f"""update films
set title = '{result[0]}', year = {result[1]}, genre = (select id from genres where title='{result[2]}'), duration = {result[3]}
where id = {id}""")
        con.commit()
        con.close()
        self.update_result_films()

    def del_film(self):
        id = self.tableWidget.item(self.tableWidget.currentRow(), 0).text()
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        valid = QMessageBox.question(
            self, '', 'Вы точно хотите удалить элемени с id ' + id,
            QMessageBox.Yes, QMessageBox.No
        )
        if valid == QMessageBox.Yes:
            cur.execute(f"""DELETE from films where id = {id}""")
            con.commit()
        con.close()
        self.update_result_films()

    def update_result_genres(self):
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        result = cur.execute("""SELECT * FROM genres""").fetchall()
        self.tableWidget_2.setRowCount(len(result))
        self.tableWidget_2.setColumnCount(len(result[0]))
        titles = [description[0] for description in cur.description]
        self.tableWidget_2.setHorizontalHeaderLabels(titles)
        for i, elem in enumerate(result):
            qw = elem
            for j, val in enumerate(qw):
                self.tableWidget_2.setItem(i, j, QTableWidgetItem(str(val)))
        con.close()

    def update_result_films(self):
        con = sqlite3.connect("films_db.sqlite")
        cur = con.cursor()
        result = cur.execute("""SELECT * FROM films INNER JOIN genres
         ON films.genre = genres.id""").fetchall()
        self.tableWidget.setRowCount(len(result))
        self.tableWidget.setColumnCount(len(result[0]) - 2)
        titles = [description[0] for description in cur.description]
        self.tableWidget.setHorizontalHeaderLabels(titles[:5])
        for i, elem in enumerate(result):
            qw = [elem[0], elem[1], elem[2], elem[6], elem[4]]
            for j, val in enumerate(qw):
                self.tableWidget.setItem(i, j, QTableWidgetItem(str(val)))
        con.close()


if __name__ == '__main__':
    app = QApplication(sys.argv)
    ex = MyWidget()
    ex.show()
    sys.exit(app.exec())
