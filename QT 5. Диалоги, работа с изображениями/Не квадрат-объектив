import sys
from PyQt5.QtGui import QPainter, QColor
from PyQt5.QtWidgets import QApplication, QMainWindow
from math import pi, cos, sin, degrees, tan
from PyQt5.QtWidgets import QColorDialog


class MyWidget(QMainWindow, Ui_MainWindow):
    def __init__(self):
        super().__init__()
        self.setupUi(self)
        self.do_paint = False
        self.pushButton.clicked.connect(self.paint)

    def paint(self):
        color = QColorDialog.getColor()
        if color.isValid():
            self.color = color
            self.do_paint = True
            self.repaint()

    def paintEvent(self, event):
        if self.do_paint:
            qp = QPainter()
            qp.begin(self)
            self.draw_star(qp)
            qp.end()

    def xs(self, x):
        return x + 500 // 2

    def ys(self, y):
        return 500 // 2 - y

    def draw_star(self, qp):
        qp.setPen(self.color)
        side = 100
        n = int(self.lineEdit_2.text())
        m = int(self.lineEdit_3.text())
        k = float(self.lineEdit.text())
        nodes = [(side * cos(i * 2 * pi / n),
                  side * sin(i * 2 * pi / n))
                 for i in range(n)]
        nodes2 = [(int(self.xs(node[0])),
                   int(self.ys(node[1]))) for node in nodes]
        for i in range(-1, len(nodes2) - 1):
            qp.drawLine(*nodes2[i], *nodes2[i + 1])
        for i in range(m - 1):
            side1 = side - int((side * k))
            side = side - side1
            nodes = []
            for j in range(-1, len(nodes2) - 1):
                nodes.append((int(k * (nodes2[j + 1][0] - nodes2[j][0]) + nodes2[j][0]),
                              int(k * (nodes2[j + 1][1] - nodes2[j][1]) + nodes2[j][1])))
            for j in range(-1, len(nodes) - 1):
                qp.drawLine(*nodes[j], *nodes[j + 1])
            nodes2 = nodes.copy()


def except_hook(cls, exception, traceback):
    sys.__excepthook__(cls, exception, traceback)


if __name__ == '__main__':
    app = QApplication(sys.argv)
    form = MyWidget()
    form.show()
    sys.excepthook = except_hook
    sys.exit(app.exec())